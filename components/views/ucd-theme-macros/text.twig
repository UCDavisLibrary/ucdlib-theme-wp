{# 
Constructs a single heading element
Args:
  content: the heading text
  level: the heading level (i.e. 1,2,3,4,5, or 6)
  modifier: optional patternlab style modifier (i.e. 'underline')
  id: optional element id
#}
{% macro heading(content, level, modifier = "", id = "") %}
  {% if modifier %}
    {% set modifier = "heading--"~modifier %}
  {% endif %}
  {% if level not in [1,2,3,4,5,6,"1","2","3","4","5","6"] %}
    {% set level=2 %}
  {% endif %}
  <h{{level}} {{modifier ? "class='"~modifier~"'"}} {{id ? "id='"~id~"'"}}>{{content}}</h{{level}}>
{% endmacro %}
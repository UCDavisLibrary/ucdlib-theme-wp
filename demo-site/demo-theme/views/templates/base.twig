
{% block html_head_container %}

{% include getUcdPartial('html-header') %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
			{% from '@ucd/macros/menus.twig' import primary_nav %}
			<ucd-theme-header
  				site-name="{{site.name}}"
  				figure-src="{{static_uri ~ "/img/book-logo.png"}}">
				{{primary_nav({menu: menu.primary})}}

			</ucd-theme-header>
			{% endblock %}
		</header>


		<main id="content" class="l-main">
			<div class="l-container">
				<div class="l-content">
					{% if title %}<h1>{{title}}</h1>{% endif %}
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
			</div>
		</main>

		{% block footer %}
			<footer id="footer">
				{% include getUcdPartial('footer') %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
